<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background1"
    tools:context=".Activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="222dp"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="224dp"
                    android:layout_height="174dp"
                    android:layout_marginTop="60dp"

                    android:lineSpacingExtra="10sp"
                    android:text="Welcome to Menu \n Maker, Enjoy our service \n and go..."
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/rosarivo" />

                <ImageView
                    android:layout_width="212dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/burger" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/linear"
                android:text="Make it Yours !"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="@font/arizonia" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear"
                android:layout_marginTop="57dp"
                android:gravity="center"
                android:padding="20dp">

                <Button
                    android:id="@+id/btnWaiter"
                    android:layout_width="190dp"
                    android:layout_height="62dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/holo_green_dark"
                    android:text="Waiters"
                    android:textSize="17sp"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnKitchen"
                    android:layout_width="191dp"
                    android:layout_height="66dp"
                    android:background="@android:color/holo_red_light"
                    android:text="Kitchen"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnReceipts"
                android:layout_width="396dp"
                android:layout_height="71dp"
                android:layout_below="@id/linear2"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_orange_dark"
                android:text="Receipts"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>